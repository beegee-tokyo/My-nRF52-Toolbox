		<activity
			android:name="tk.giesecke.my_nrf52_tb.setup_esp32.ESP32Activity"
			android:icon="@drawable/ic_esp32_feature"
			android:label="@string/esp32_feature_title" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="tk.giesecke.my_nrf52_tb.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="tk.giesecke.my_nrf52_tb.setup_esp32.settings.SettingsActivity"
			android:label="@string/esp32_feature_title" />
		<service
			android:name="tk.giesecke.my_nrf52_tb.setup_esp32.ESP32Service"
			android:label="@string/esp32_feature_title" />

		<activity
			android:name="tk.giesecke.my_nrf52_tb.setup_lora.LoRaActivity"
			android:icon="@drawable/ic_lora_feature"
			android:label="@string/lora_feature_title" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="tk.giesecke.my_nrf52_tb.LAUNCHER" />
			</intent-filter>
		</activity>
		<service
			android:name="tk.giesecke.my_nrf52_tb.setup_lora.LoRaService"
			android:label="@string/lora_feature_title" />

		<!-- Plug-in activities -->
		<activity
			android:name="tk.giesecke.my_nrf52_tb.dfu.DfuActivity"
			android:icon="@drawable/ic_dfu_feature"
			android:label="@string/dfu_feature_title" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="tk.giesecke.my_nrf52_tb.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="tk.giesecke.my_nrf52_tb.dfu.settings.SettingsActivity"
			android:label="@string/dfu_settings_title" />
		<activity
			android:name="tk.giesecke.my_nrf52_tb.dfu.NotificationActivity"
			android:label="@string/dfu_feature_title" />

		<activity
			android:name="tk.giesecke.my_nrf52_tb.uart.UARTActivity"
			android:icon="@drawable/ic_uart_feature"
			android:label="@string/uart_feature_title"
			android:windowSoftInputMode="adjustResize"
			android:launchMode="singleTask" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="tk.giesecke.my_nrf52_tb.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name="tk.giesecke.my_nrf52_tb.uart.settings.SettingsActivity"
			android:label="@string/uart_feature_title" />

		<service
			android:name="tk.giesecke.my_nrf52_tb.uart.UARTService"
			android:label="@string/uart_feature_title" />

		<activity
			android:name="tk.giesecke.my_nrf52_tb.dfu.DfuInitiatorActivity"
			android:label="@string/dfu_service_title"
			android:noHistory="true"
			android:theme="@style/AppTheme.Translucent" >
			<intent-filter>
				<action android:name="no.nordicsemi.android.action.DFU_UPLOAD" />

				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<service
			android:name="tk.giesecke.my_nrf52_tb.dfu.DfuService"
			android:exported="false"
			android:label="@string/dfu_service_title" >
			<intent-filter>
				<action android:name="no.nordicsemi.android.action.DFU_UPLOAD" />

				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</service>

	</application>

