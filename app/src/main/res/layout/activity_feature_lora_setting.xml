                    <RadioButton
                        android:id="@+id/cr_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/p2p_cr_8" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tv_prelen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cr_sel"
